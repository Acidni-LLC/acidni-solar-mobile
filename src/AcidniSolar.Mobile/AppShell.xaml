<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:AcidniSolar.Mobile.Views"
       x:Class="AcidniSolar.Mobile.AppShell"
       Shell.FlyoutBehavior="Disabled"
       Shell.TabBarBackgroundColor="{StaticResource DarkBackground}"
       Shell.TabBarTitleColor="{StaticResource SolarOrange}"
       Shell.TabBarUnselectedColor="{StaticResource TextMuted}"
       Shell.TabBarForegroundColor="{StaticResource SolarOrange}">

    <TabBar>
        <ShellContent Title="Dashboard"
                      Icon="dashboard_icon.png"
                      ContentTemplate="{DataTemplate views:DashboardPage}" />

        <ShellContent Title="Alerts"
                      Icon="alerts_icon.png"
                      ContentTemplate="{DataTemplate views:AlertsPage}" />

        <ShellContent Title="Settings"
                      Icon="settings_icon.png"
                      ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>

    <!-- Detail page route (not in tab bar) -->
    <Shell.FlyoutContent>
        <Grid />
    </Shell.FlyoutContent>

</Shell>
