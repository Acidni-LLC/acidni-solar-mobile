<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:AcidniSolar.Mobile.Converters">

    <!-- ── Value Converters ─────────────────────────────── -->
    <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
    <converters:PercentToProgressConverter x:Key="PercentToProgressConverter" />
    <converters:BoolToGridColorConverter x:Key="BoolToGridColorConverter" />
    <converters:SeverityToIconConverter x:Key="SeverityToIconConverter" />
    <converters:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter" />
    <converters:TempUnitToColorConverter x:Key="TempUnitToColorConverter" />

    <!-- ── Label Styles ─────────────────────────────────── -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="Headline" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextHeading}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="Subtitle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextMuted}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="MetricValue" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource SolarOrange}" />
    </Style>

    <!-- ── Button Styles ────────────────────────────────── -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SolarOrange}" />
        <Setter Property="TextColor" Value="{StaticResource DarkBackground}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="OutlineButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="{StaticResource SolarOrange}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="TextColor" Value="{StaticResource SolarOrange}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- ── Entry Style ──────────────────────────────────── -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource DarkBackground}" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- ── Frame / Card Style ───────────────────────────── -->
    <Style x:Key="Card" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <!-- ── ProgressBar ──────────────────────────────────── -->
    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource SolarOrange}" />
    </Style>

    <!-- ── Switch ────────────────────────────────────────── -->
    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource SolarOrange}" />
        <Setter Property="ThumbColor" Value="White" />
    </Style>

    <!-- ── ActivityIndicator ────────────────────────────── -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource SolarOrange}" />
    </Style>

    <!-- ── Shell Styling ────────────────────────────────── -->
    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource DarkBackground}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource SolarOrange}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource TextHeading}" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource TabBarBackground}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource SolarOrange}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextMuted}" />
    </Style>

    <!-- ── NavigationPage ───────────────────────────────── -->
    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource DarkBackground}" />
        <Setter Property="BarTextColor" Value="{StaticResource TextHeading}" />
    </Style>

    <!-- ── Page ──────────────────────────────────────────── -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource DarkBackground}" />
    </Style>

</ResourceDictionary>
